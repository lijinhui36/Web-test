<!--index.wxml-->
<view class="container">
  <button class='itemView' bindtap='toastClick'>showToast吐司框</button>
 <button class='itemView' bindtap='loadingClick'>showLoading提示框</button>
 <button class='itemView' bindtap='modalClick'>showModal模态框</button>
<button class='itemView' bindtap='actionClick'>showActionSheet列表地提示框</button>
  <label>Choose a browser from this list:
    <input list=" browsers" name= "myBrowser"/>
  </label>
  <datalist id="browsers">
         <option value="Chrome">
         <option value="Firefox">
         <option value="Internet Explorer">
         <option value="Opera">
         <option value= "Safari">
         <option value="Microsoft Edge" >
  </datalist>
</view>
